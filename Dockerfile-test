FROM ubuntu:22.04

# Set timezone to avoid interactive prompts
ENV DEBIAN_FRONTEND=noninteractive
ENV TZ=America/Vancouver

RUN apt update && apt install -y \
    build-essential \
    python3 \
    python3-flask \
    libjsoncpp-dev \
    libboost-dev \
    libboost-system-dev \
    libboost-thread-dev \
    libwebsocketpp-dev \
    libsqlite3-0 \
    libsqlite3-dev \
    libgtest-dev \
    bc \
    && rm -rf /var/lib/apt/lists/*

# Copy local files instead of git clone
COPY . /scrabble/

WORKDIR /scrabble
RUN make clean && make
RUN chmod +x run-scrabble.sh

CMD ["./run-scrabble.sh"]